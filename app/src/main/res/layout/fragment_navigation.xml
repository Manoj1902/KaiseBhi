<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFFEF9"
    android:clickable="false"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profile"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#222"
                        android:textSize="20dp"
                        android:singleLine="true"
                        android:fontFamily="@font/nunito_blackitalic"
                        android:text="Kanha Agrawal"
                        android:id="@+id/user_navName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="35dp"
                        android:layout_weight="1"
                        android:textColor="#5E5E5E"
                        android:text="kanha@gmail.com"
                        android:id="@+id/user_navId"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/nunito_bolditalic"
                        android:layout_marginTop="60dp"
                        android:layout_weight="1"
                        android:textColor="#E53935"
                        android:text="View Profile"
                        android:textSize="10dp"
                        android:id="@+id/viewProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/showPro"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="-80dp"
                    android:onClick="uploadProfile"
                    android:layout_gravity="center"
                    android:src="@drawable/profile" />


            </LinearLayout>

            <View
                android:background="#B0D5D5D5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                 <TextView
                    android:textColor="#616161"
                    android:id="@+id/quesNav"
                    android:drawableLeft="@drawable/search_questions"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito_blackitalic"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Search Questions"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic5"/>

                    <TextView
                        android:textColor="#515151"
                        android:textSize="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/rewardNav"
                        android:fontFamily="@font/nunito_blackitalic"
                        android:text="My Rewards"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic3"/>

                    <TextView
                        android:textColor="#515151"
                        android:textSize="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/answersNav"
                        android:fontFamily="@font/nunito_blackitalic"
                        android:text="My Answers"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic1"/>

                    <TextView
                        android:textColor="#515151"
                        android:textSize="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/mineNav"
                        android:fontFamily="@font/nunito_blackitalic"
                        android:text="My Questions"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic2"/>

                    <TextView
                        android:textColor="#515151"
                        android:textSize="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/answersHide"
                        android:fontFamily="@font/nunito_blackitalic"
                        android:text="Hide Answers"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic4"/>

                    <TextView
                        android:textColor="#515151"
                        android:textSize="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/answersPaid"
                        android:fontFamily="@font/nunito_blackitalic"
                        android:text="Paid Answers"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/favNav"
                    android:drawableLeft="@drawable/ic_baseline_favorite_border_24"
                    android:textColor="#515151"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/nunito_blackitalic"
                    android:layout_marginVertical="10dp"
                    android:text="My Favourites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic6"/>

                    <TextView
                        android:textColor="#515151"
                        android:textSize="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/SugNav"
                        android:fontFamily="@font/nunito_blackitalic"
                        android:text="Suggestions"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <View
                    android:background="#B0D5D5D5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="10dp"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#636363"
                    android:textSize="18dp"
                    android:id="@+id/aboutNav"
                    android:layout_marginHorizontal="20dp"
                    android:text="About"
                    android:fontFamily="@font/nunito_blackitalic"
                    android:drawablePadding="25dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="#B0D5D5D5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"/>




                <TextView
                    android:textStyle="bold"
                    android:textColor="#515151"
                    android:textSize="14dp"
                    android:id="@+id/termNav"
                    android:fontFamily="@font/nunito_blackitalic"
                    android:layout_marginHorizontal="20dp"
                    android:text="Terms &amp; Conditions"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#515151"
                    android:textSize="14dp"
                    android:id="@+id/logNav"
                    android:layout_marginHorizontal="20dp"
                    android:text="Logout"
                    android:fontFamily="@font/nunito_blackitalic"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>



        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


</LinearLayout>
